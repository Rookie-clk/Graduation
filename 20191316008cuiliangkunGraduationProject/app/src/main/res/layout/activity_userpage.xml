<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        >
        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#00000000">
        </Button>
        <ImageView
            android:id="@+id/userpage_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/head"
            >
        </ImageView>

        <TextView
            android:id="@+id/userpage_logintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#fff"
            ></TextView>
        <TextView
            android:id="@+id/userpage_logintxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录享更多特权"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            ></TextView>
            <ImageView
                android:id="@+id/userpage_arrow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow_right"
                android:layout_toRightOf="@+id/userpage_avatar"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="200dp"
                ></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/userpage_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:gravity="left"
            android:paddingTop="10dp"
            android:text="我的收藏"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"></Button>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DCDCDC"
        >

    </View>
    <Button
        android:id="@+id/userpage_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常用信息"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="#00000000"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        ></TextView>
    <Button
        android:id="@+id/userpage_wantbeowner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我想当房东赚钱"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:textSize="20sp"

        ></Button>
    <Button
        android:id="@+id/userpage_manageMyHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理我的民宿"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:textSize="20sp"

        ></Button>
    <Button
        android:id="@+id/userpage_manageAllHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理所有民宿"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:textSize="20sp"
        ></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp">
        <Button
            android:id="@+id/userpage_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="退出登录"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#DC143C"
            android:paddingTop="10dp"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:gravity="center"
            ></Button>
    </LinearLayout>

</LinearLayout>

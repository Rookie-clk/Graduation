<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#fff"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/minihotel"
            android:layout_gravity="center"

            ></ImageView>
        <TextView
            android:id="@+id/orderitem_hotelname"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="如家酒店（上海闵行师范大学吴泾店）"
            ></TextView>
        <TextView
            android:id="@+id/orderitem_hotelprice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="￥1312"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1E90FF"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/orderitem_truename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="崔良昆"
                ></TextView>
            <TextView
                android:id="@+id/orderitem_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18717866360"></TextView>
            <TextView
                android:id="@+id/orderitem_shenfenzheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="370305199906306210"></TextView>
            <TextView
                android:id="@+id/orderitem_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家庭房"></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/orderitem_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/orderitem_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#fff"
            android:background="#1E90FF"
            android:textStyle="bold"
            ></Button>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/orderitem_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评"
            android:textColor="#fff"
            android:background="#1E90FF"
            android:textStyle="bold"
            ></Button>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/orderitem_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次预订"
            android:textColor="#fff"
            android:background="#1E90FF"
            android:textStyle="bold"
            ></Button>
    </LinearLayout>
</LinearLayout>
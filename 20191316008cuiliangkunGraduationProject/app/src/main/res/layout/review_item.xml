<!--<?xml version="1.0" encoding="utf-8"?>-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/hotelpage_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar"
        android:layout_margin="10dp"
        android:layout_gravity="center"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotelpage_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clk111"
            android:textColor="#000"
            android:textStyle="bold"

            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="卫生"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                ></TextView>
            <TextView
                android:id="@+id/hotelpage_pweisheng"
                android:textSize="10sp"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="5.0"
                android:textColor="#000"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="环境"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="15sp"

                ></TextView>
            <TextView
                android:id="@+id/hotelpage_phuanjing"
                android:layout_width="0dp"
                android:textSize="10sp"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="5.0"
                android:textColor="#000"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="服务"
                android:textColor="#000"
                android:textSize="15sp"

                android:textStyle="bold"
                android:layout_marginTop="5dp"
                ></TextView>
            <TextView
                android:id="@+id/hotelpage_pfuwu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:text="5.0"
                android:textSize="10sp"

                android:textColor="#000"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="设施"
                android:textSize="15sp"

                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                ></TextView>
            <TextView
                android:id="@+id/hotelpage_psheshi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:textSize="10sp"

                android:text="5.0"
                android:textColor="#000"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/hotelpage_pinglun"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="房子很好，孩子很喜欢，下次还会来1111111111111111111111111111111111111111111111"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            ></TextView>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
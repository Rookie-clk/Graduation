<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cyber"
            android:adjustViewBounds="true"
            ></ImageView>
        <ImageButton
            android:id="@+id/hotelpage_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fabulous_white"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"></ImageButton>
        <TextView
            android:id="@+id/home_list_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="橡宿·蔓枝·现代轻奢"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/home_list_price"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="￥653"
            android:textColor="#000"

            ></TextView>
    </RelativeLayout>

</LinearLayout>
